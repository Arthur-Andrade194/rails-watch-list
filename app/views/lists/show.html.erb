

<div class="container">
  <h1 class="mb-4"><%= @list.name %></h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @list.movies.each do |movie| %>
      <div class="col">
        <div class="card">
          <img src="<%= movie.poster_url %>" class="card-img-top" alt="Movie Poster">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text">Rating: <%= movie.rating %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="my-4">
    <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
  </div>
</div>
